{
  "name": "middle.messenger.praktikum.yandex",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": ">=16.20.1"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "vite build && node server.js",
    "preview": "vite preview",
    "lint": "npm run lint:script && npm run lint:styles",
    "lint:script": "eslint .",
    "prettier": "prettier ./src --check",
    "prettier:fix": "prettier ./src --write",
    "lint:script:fix": "eslint . --fix",
    "lint:styles": "stylelint ./**/*.css",
    "lint:styles:fix": "stylelint ./**/*.css --fix",
    "test": "mocha --require ts-node/register --require ./mochaSetup.cjs './src/**/*.spec.ts'"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/css-modules": "^1.0.2",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "autoprefixer": "^10.4.14",
    "chai": "^4.3.7",
    "eslint": "^8.42.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "express": "^4.18.2",
    "jsdom": "^22.1.0",
    "mocha": "10.2.0",
    "stylelint": "^15.7.0",
    "stylelint-config-standard": "^33.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "vite": "^4.3.9"
  },
  "dependencies": {
    "handlebars": "^4.7.7",
    "nanoid": "3"
  }
}
